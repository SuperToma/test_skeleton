<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Product\Domain\Entity\Product"
            table="product"
            repository-class="App\Product\Infrastructure\Repository\ProductRepository">

        <indexes>
            <index name="search_idx" columns="description" flags="fulltext"/>
        </indexes>

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="code" column="code" length="50" />
        <field name="description" column="description" length="255" />
        <field name="price" type="decimal" column="price" precision="7" scale="2" />
    </entity>

</doctrine-mapping>
